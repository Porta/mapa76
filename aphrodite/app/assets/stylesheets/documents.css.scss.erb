.documents {
  h5 {
    margin: 4px 0 0 0;
  }
  tr.selected td {
    background-color: #d7eff9;
  }
  tr.failed td {
    background-color: #FFB4B4;
    .title a {
      color: #555;
    }
  }
  th.sort{
    .current{
      padding-right: 12px;
      background-repeat: no-repeat;
      background-position: right center;
    }
    .asc{
      background-image: url('<%= asset_path 'up_arrow.gif' %>');
    }
    .desc{
      background-image: url('<%= asset_path 'down_arrow.gif' %>');
    }
  }
  .info {
    margin-right: 1em;
  }
  .highlights {
    font-size: 12px;
    li {
      line-height: 15px;
    }
  }
  .info, .highlights, .tools {
    margin-bottom: 8px;
  }
  .heading em,
  .highlights em {
    background-color: yellow;
  }
  .tools a {
    color: #555;
  }
  .progress {
    height: 10px;
    margin: 0;
  }
}

.project-docs {
  color: #666;
  font-size: 11px;
  li {
    line-height: 15px;
  }
}
