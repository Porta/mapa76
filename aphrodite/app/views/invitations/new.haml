.main-content.registration.clearfix
  .content.clearfix
    %h1 Invitación
    = form_for @invitation, builder: PrettyFormBuilder, id: 'registration-form' do |f|
      = f.pretty_text_field :name, placeholder: 'Nombre *'
      = f.pretty_text_field :organization, placeholder: 'Organización *'
      = f.pretty_text_field :email, placeholder: 'Email *'
      = f.pretty_text_area  :reason
      = f.submit 'Ingresar'

  = render 'shared/us_sidebar'